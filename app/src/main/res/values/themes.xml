<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Grootclub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_emerald</item>
        <item name="colorPrimaryVariant">@color/green_emerald</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_hover_color</item>
        <item name="colorSecondaryVariant">@color/background_hover_color</item>
        <item name="colorOnSecondary">@color/background_hover_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Grootclub.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Grootclub.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Grootclub.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextTile14" >
    <item name="android:textSize">@dimen/text_size_14sp</item>
    <item name="android:textColor">@color/text_slate_700</item>
    <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTile18" >
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/text_slate_700</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextTile16" >
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/text_slate_700</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextTile24" >
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textColor">@color/text_slate_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDetail16" >
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/text_slate_700</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextDetail14" >
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/text_slate_700</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextDetail18" >
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/text_slate_700</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextInput16" >
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/text_slate_700</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewDetail">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DataHeader">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:gravity">right|center_vertical</item>
        <!--<item name="android:background">@color/defaultBackgroundPlus</item>-->
        <item name="android:textColor">@color/text_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">@dimen/margin5dp</item>
    </style>

    <style name="HeaderHorizontal" parent="DataHeader">
        <item name="android:paddingTop">@dimen/margin5dp</item>
        <item name="android:paddingBottom">@dimen/margin5dp</item>
    </style>

    <style name="ListTextView">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="LineHorizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#484848</item>
    </style>

    <style name="ButtonBack" >
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_radius_stoke_back</item>
        <item name="android:layout_width">79dp</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:elevation">3dp</item>
    </style>
    <style name="ButtonNext" >
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_radius_stoke_next</item>
        <item name="android:layout_width">79dp</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:elevation">3dp</item>
    </style>

</resources>