<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCourts"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_margin="@dimen/margin5dp"
    app:cardCornerRadius="@dimen/margin20dp"
    app:cardElevation="@dimen/margin5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constCourt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imvSport"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCourt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin5dp"
            android:text="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imvSport"
            app:layout_constraintStart_toEndOf="@id/imvSport"
            app:layout_constraintTop_toTopOf="@+id/imvSport" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>